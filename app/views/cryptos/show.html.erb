<%= render @crypto %>
<div class="row justify-content-md-center">

<div class="col-2">
  <%= button_to "Edit this crypto", edit_crypto_path(@crypto), method: :get, class: "btn btn-success col" %> 
</div>

<div class="col-2">
  <%= button_to "Delete this crypto", @crypto, method: :delete, data: {confirm: "Are u sure?"}, class: "btn btn-danger col" %>
</div>

<div class="col-2">
  <%= link_to "Back to portfolio", cryptos_path,class: "btn btn-primary col" %>
</div>


</div>
